{
  "openapi": "3.0.0",
  "info": {
    "description": "knowbee",
    "version": "1.0.0",
    "title": "Geolocation API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [{
    "url": "/"
  }],
  "tags": [{
    "name": "Location Request",
    "description": "Example API for requesting and return geolocation information"
  }],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "Location Request"
        ],
        "summary": "Returns welcome message",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "int32",
                  "example": 200
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "welcome"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Geolocation lookup"
        ],
        "summary": "Returns either street_name or latitude and longitude",
        "produces": [
          "application/json"
        ],
        "parameters": [{
          "in": "body",
          "name": "body",
          "required": true,
          "schema": {
            "type": "object",
            "properties": {
              "latitude": {
                "type": "string",
                "required": false,
                "example": "-1.954680"
              },
              "longitude": {
                "type": "string",
                "required": false,
                "example": "30.093742"
              },
              "street_name": {
                "type": "string",
                "required": false,
                "example": "Kigali Convention Centre"
              }
            }
          }
        }],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "int32",
                  "example": 200
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "latitude": {
                      "type": "string",
                      "example": "-1.954680"
                    },
                    "longitude": {
                      "type": "string",
                      "example": "30.093742"
                    },
                    "street_name": {
                      "type": "string",
                      "example": "Kigali Convention Center, DR71, Kimihurura, Akarere ka Gasabo, Umujyi wa Kigali, PO BOX 2376 KIGALI-RWANDA, Rwanda"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}